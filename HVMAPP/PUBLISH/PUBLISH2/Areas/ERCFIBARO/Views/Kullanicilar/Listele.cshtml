@model IEnumerable<HVMAPP.Entity.ErcUser>
@{
    ViewBag.Title = "Kullanıcı Listele";
    Layout = "~/Areas/ERCFIBARO/Views/Shared/_Layout.cshtml";
}
<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
            <a href="#" class="fa fa-times"></a>
        </div>

        <h2 class="panel-title">KULLANICI LİSTELE</h2>
    </header>
    <div class="panel-body">
        <table class="table table-bordered table-striped mb-none" id="datatable-tabletools" data-swf-path="assets/vendor/jquery-datatables/extras/TableTools/swf/copy_csv_xls_pdf.swf">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Kullanıcı Adı</th>
                    <th>Aktif Durumu</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="gradeX">

                    <td>@item.Name</td>
                    <td>
                        @item.Surname
                    </td>
                    <td>@item.Username</td>
                    @if (item.IsActive == true)
                    {
                        <td><i class="fa fa-check"></i> Aktif</td>
                    }
                    else
                    {
                        <td><i class="fa fa-ban"></i> Pasif</td>
                    }
                    <td>
                        <a href="/ERCFIBARO/Kullanicilar/Guncelle/@item.ID" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                        <a href="/ERCFIBARO/Kullanicilar/Sil/@item.ID" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</section>