
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="fixed">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap | HVM APP | ERC TEKNOLOJİ</title>
    <meta name="keywords" content="HVM ERC TEKNOLOJİ" />
    <meta name="description" content="ERC TEKNOLOJİ">
    <meta name="author" content="ERC TEKNOLOJİ">
    <!-- Site favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Areas/ERCFIBARO/Dashboard/assets/images/HVM APP.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Areas/ERCFIBARO/Dashboard/assets/images/HVM APP.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Areas/ERCFIBARO/Dashboard/assets/images/HVM APP.png">

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Areas/ERCFIBARO/Dashboard/assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Areas/ERCFIBARO/Dashboard/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Areas/ERCFIBARO/Dashboard/assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Areas/ERCFIBARO/Dashboard/assets/vendor/bootstrap-datepicker/css/datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Areas/ERCFIBARO/Dashboard//assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Areas/ERCFIBARO/Dashboard/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Areas/ERCFIBARO/Dashboard/assets/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/modernizr/modernizr.js"></script>
    <style>
        .ortala {
            margin-left: 25%;
            margin-right: 25%;
        }
    </style>
</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="@Url.Action("GirisYap","HVMGiris")" class="logo pull-left">
                <img src="~/Areas/ERCFIBARO/Dashboard/assets/images/HVM APP.png" height="70" alt="Medical Supplies Turkey" /><img src="~/Areas/ERCFIBARO/Dashboard/assets/images/erc.png" height="70" alt="ERC" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> GİRİŞ YAP</h2>
                </div>
                <div class="panel-body">
                    <form method="post">
                        <div class="form-group mb-lg">
                            @if (ViewBag.Mesaj != null)
                            {
                                <div class="alert alert-danger">
                                    <p><i class="fa fa-warning"></i>  @ViewBag.Mesaj</p>
                                </div>
                            }
                            <label>Username</label>
                            <div class="input-group input-group-icon">
                                <input name="Username" type="text" placeholder="domain.domain" class="form-control input-lg" />
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Password</label>
                            </div>
                            <div class="input-group input-group-icon">
                                <input name="Password" type="password" placeholder="********" class="form-control input-lg" />
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="checkbox-custom checkbox-default">
                                    <input id="RememberMe" name="rememberme" type="checkbox" />
                                    <label for="RememberMe">Remember Me</label>
                                </div>
                            </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary hidden-xs">Giriş Yap</button>
                                <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Giriş Yap</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2020. All rights reserved. Template by <a href="@Url.Action("GirisYap","HVMGiris")">ERC Teknoloji</a>.</p>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/jquery/jquery.js"></script>
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Admin/assets/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Areas/ERCFIBARO/Dashboard/assets/javascripts/theme.init.js"></script>

</body>
</html>