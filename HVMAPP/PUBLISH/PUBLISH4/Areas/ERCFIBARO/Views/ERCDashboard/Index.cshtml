@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Areas/ERCFIBARO/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 col-lg-12 col-xl-4">
    <h5 class="text-semibold text-dark text-uppercase mb-md mt-lg">ENVANTER BİLGİSİ</h5>
    <div class="row">
        <div class="col-md-6 col-xl-12">
            <section class="panel">
                <div class="panel-body bg-primary">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon">
                                <i class="fa fa-life-ring"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Bilgisayar Sayısı</h4>
                                <div class="info">
                                    <strong class="amount">@ViewBag.Bilgisayar</strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                ERC TEKNOLOJİ
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-md-6 col-xl-12">
            <section class="panel">
                <div class="panel-body bg-success">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon">
                                <i class="fa fa-life-ring"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Ekran Sayısı</h4>
                                <div class="info">
                                    <strong class="amount">@ViewBag.EkranSayisi</strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                ERC TEKNOLOJİ
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-md-6 col-xl-12">
            <section class="panel">
                <div class="panel-body bg-tertiary">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon">
                                <i class="fa fa-life-ring"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Oda Sayısı</h4>
                                <div class="info">
                                    <strong class="amount">@ViewBag.OdaSayisi</strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                ERC TEKNOLOJİ
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-md-6 col-xl-12">
            <section class="panel">
                <div class="panel-body bg-quartenary">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon">
                                <i class="fa fa-life-ring"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Kalan Oda ve Bilgisayar Ekleme Sayısı</h4>
                                <div class="info">
                                    <strong class="amount">@ViewBag.Toplam </strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                ERC TEKNOLOJİ
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>