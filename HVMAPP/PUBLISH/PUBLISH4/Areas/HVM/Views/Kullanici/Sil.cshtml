@model HVMAPP.Entity.UserMember
@{
    ViewBag.Title = "Kullanıcı Sil";
    Layout = "~/Areas/HVM/Views/Shared/_Layout.cshtml";
}
<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
            <a href="#" class="fa fa-times"></a>
        </div>

        <h2 class="panel-title">Kullanıcı Sil</h2>
    </header>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                <dl class="dl-horizontal">
                    <dt>Rol Adı</dt>
                    <dd>@Model.RoleMember.RoleName</dd>
                    <hr />
                    <dt>Şirket Adı</dt>
                    <dd>@Html.DisplayFor(model=>model.CompanyName)</dd>
                    <hr />
                    <dt>
                        Adı
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <hr />
                    <dt>
                        Soyadı
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Surname)
                    </dd>
                    <hr />
                    <dt>
                        Kullanıcı Adı
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Username)
                    </dd>
                    <hr />
                    <dt>
                        Şifre
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Password)
                    </dd>
                    <hr />
                    <dt>
                        Son Güncelleme Tarihi
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UpdateDate)
                    </dd>
                    <hr />
                    <dt></dt>
                    <dd>

                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Kullanıcı Sil</button>
                            <a href="@Url.Action("Listele", "Kullanici")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </dd>
                    <hr />
                </dl>
            </div>
        }
    </div>
</section>